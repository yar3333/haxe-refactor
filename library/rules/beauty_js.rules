ID = \b[_a-zA-Z][_a-zA-Z0-9]*\b
LONGID = ID(?:[.]ID)*
INT = [0-9]+(?:e[-+][0-9]+)?
FLOAT = [0-9]+(?:[.][0-9]+)?(?:e[-+][0-9]+)?
NUMBER = (?:INT|FLOAT)
VALUE = (?:LONGID|NUMBER)
SPACE = [ \t]+
OPTSPACE = [ \t]*

// ==================== regular expressions ========================

// trim end spaces 
/([^ \t\n])[ \t]+$/$1/m

// remove spaces after "("
/[(][ ]+([^{])/($1

// remove spaces before ")"
/([_a-zA-Z0-9])[ ]+[)]/$1)

// remove empty lines before }
/(?:\n(?:OPTSPACE))+\n(OPTSPACE)}/\n$1}/

// "a==b" => "a == b"
/[ ]*([=][=]|[!][=])[ ]*/ $1 /

// "{a" => "{ a"
/[{]([_a-zA-Z0-9('"-])/{ $1

// "a}" => "a }"
/([_a-zA-Z0-9)'";])[}]/$1 }

// "if(" => "if ("
/\b(if|for|switch)\s*[(]/$1 (/

// "function (" => "function("
/\bfunction[ ]+[(]/function(/

// " ," => ","
/[ ]+[,]/,/

// ",a" => ", a"
/,([^\n \t])/, $1/
/(\n[ \t]*),\s+([^\n \t])/$1,$2/
