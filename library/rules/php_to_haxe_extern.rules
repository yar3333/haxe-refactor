ID = [_a-zA-Z][_a-zA-Z0-9]*
INT = [0-9]+(?:e[-+][0-9]+)?
FLOAT = [0-9]+(?:[.][0-9]+)?(?:e[-+][0-9]+)?
NUMBER = (?:INT|FLOAT)
STRING = (?:"(?:\\.|[^"])*?"|'(?:\\.|[^'])*?')
TYPE = ID(?:[.]ID)*

VALUE = (?:untyped\s*__php__[(]STRING[)]|ID|NUMBER|STRING)

/([,(]\s*)[?]?\s*(ID)\s*:\s*(TYPE)\s*=\s*VALUE/$1?$2:$3/

/^extern class\s+(ID)(.+?)\bstatic inline\s+var\s+(ID)\s*:\s*(TYPE)\s*=[^;]+/extern class $1$2static var $3(get, never) : $4; private static inline function get_$3() : $4 return untyped __php__("$1::$3")/smr
/^extern class\s+(ID)(.+?)\bstatic inline\s+var\s+(ID)\s*=\s*INT\s*;/extern class $1$2static var $3(get, never) : Int; private static inline function get_$3() : Int return untyped __php__("$1::$3");/smr
/^extern class\s+(ID)(.+?)\bstatic inline\s+var\s+(ID)\s*=\s*FLOAT\s*;/extern class $1$2static var $3(get, never) : Float; private static inline function get_$3() : Float return untyped __php__("$1::$3");/smr
/^extern class\s+(ID)(.+?)\bstatic inline\s+var\s+(ID)\s*=\s*STRING\s*;/extern class $1$2static var $3(get, never) : String; private static inline function get_$3() : String return untyped __php__("$1::$3");/smr

/^(\s*)public\s+(static|var|function)\b/$1$2/m

/\b(static var ID : TYPE) = [^;]+/$1/z
 